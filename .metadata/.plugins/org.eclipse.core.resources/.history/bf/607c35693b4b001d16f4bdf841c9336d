package CRM.repository;

import java.util.Optional;

import org.springframework.data.repository.CrudRepository;
import org.springframework.stereotype.Repository;

import CRM.entity.Indirizzo;

@Repository
public interface IndirizzoRepository extends CrudRepository<Indirizzo, Long>  {

	 public Optional<Indirizzo> findById(Long id);
		
		public Optional<Indirizzo> findByCliente(String cliente);
		
		public boolean existsByCliente(String cliente);
}
